<form method="post">
    <input type="hidden" name="room_id" value="{{room.room_id}}">

    <div class="form-group">
        <label for="name">Název</label>
        <input type="text" class="form-control" id="name" placeholder="Název místnosti" name="name" value="{{room.name}}" required>
        {{#errors.name}}
            <div class="invalid-feedback d-block" role="alert">
                {{errors.name}}
            </div>
        {{/errors.name}}
    </div>
    <div class="form-group">
        <label for="phone">Telefon</label>
        <input type="text" class="form-control" id="phone" placeholder="Telefonní číslo" name="phone" value="{{room.phone}}">
        {{#errors.name}}
            <div class="invalid-feedback d-block" role="alert">
                {{errors.name}}
            </div>
        {{/errors.name}}
    </div>
    <div class="form-group">
        <label for="no">Číslo</label>
        <input type="text" class="form-control" id="no" placeholder="Číslo pokoje" name="no" value="{{room.no}}" required>
        {{#errors.no}}
            <div class="invalid-feedback d-block" role="alert">
                {{errors.no}}
            </div>
        {{/errors.no}}
    </div>
    <button type="submit" class="btn btn-primary mt-3">Potvrdit</button>
</form>